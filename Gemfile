  gem 'rspec-rails'
  gem 'pry'
  gem 'pry-nav'
  gem 'pry-rails', '~> 0.3.2'
  gem 'simple_bdd'
  gem 'shoulda-matchers'
  gem 'spring'
  gem 'capistrano', '~> 3.4.0'
  gem 'capistrano-rails', '~> 1.1'
  gem 'capistrano-passenger'
  gem 'capistrano-figaro-yml', '~> 1.0.2'
end

